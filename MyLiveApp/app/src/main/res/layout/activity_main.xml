<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myliveapp.activity.MainActivity">
    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#4de7e7e7">
        <RadioButton
            android:id="@+id/main_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:text="首页"
            android:textColor="@drawable/text_color_sel"
            android:drawableTop="@drawable/main_home_select"
            android:checked="true"
            android:gravity="center"
            android:layout_marginLeft="80dp"
            />
        <RadioButton
            android:id="@+id/main_personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:text="我的"
            android:textColor="@drawable/text_color_sel"
            android:drawableTop="@drawable/main_personal_select"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="80dp"
            />
    </RelativeLayout>
    <ImageView
        android:id="@+id/main_push"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:background="@drawable/li_maintab_party_pic_selected"/>
</RelativeLayout>
